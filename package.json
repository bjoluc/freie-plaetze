{
  "private": true,
  "workspaces": [
    "./backend",
    "./frontend"
  ],
  "scripts": {
    "xo": "xo",
    "codegen": "graphql-codegen --config .graphqlrc",
    "codegen:watch": "npm run codegen -- --watch"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/typescript-graphql-apollo": "1.1.1",
    "@graphql-codegen/typescript-operations": "2.3.5",
    "@graphql-codegen/typescript-react-apollo": "3.2.11",
    "eslint-config-xo-react": "0.24.0",
    "import-sort-style-module": "6.0.0",
    "prettier": "2.6.2",
    "prettier-plugin-import-sort": "0.0.7",
    "type-fest": "2.12.2",
    "typescript": "4.6.3",
    "xo": "0.38.2"
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "ignores": [
      "frontend/lib/api/generated/*"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "react/prop-types": "off",
      "import/no-extraneous-dependencies": "off",
      "node/file-extension-in-import": "off",
      "node/no-unsupported-features/es-syntax": "off",
      "import/no-unassigned-import": "off"
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "importSort": {
    ".ts, .tsx, .js": {
      "style": "module",
      "parser": "typescript"
    }
  }
}
